<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <properties>
    <app.repo>${project.baseUri}../sdk/data/repos/app/</app.repo>
    <platform.repo>${project.baseUri}../sdk/data/repos/platform/</platform.repo>
  </properties>
  <!--var app.repo is supplied by inheritors. mvn has dynamic var binding not lexical.-->
  <repositories>
    <repository>
      <id>platform.repo</id>
      <name>platform</name>
      <url>${platform.repo}</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>
    <repository>
      <id>app.repo</id>
      <name>app</name>
      <url>${app.repo}</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>always</updatePolicy>
      </snapshots>
    </repository>
  </repositories>
  <distributionManagement>
    <repository>
      <id>app.repo</id>
      <url>${app.repo}</url>
    </repository>
  </distributionManagement>

  <modelVersion>4.0.0</modelVersion>
  <groupId>SwirldsPlatform</groupId>
  <artifactId>platform</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <dependencies>
    <dependency>
      <groupId>SwirldsPlatform</groupId>
      <artifactId>fcfs</artifactId>
      <version>0.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>SwirldsPlatform</groupId>
      <artifactId>fcdb</artifactId>
      <version>0.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.offbynull.portmapper</groupId>
      <artifactId>portmapper</artifactId>
      <version>2.0.4</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-nop</artifactId>
      <version>1.7.21</version>
    </dependency>
    <dependency>
     <groupId>org.apache.logging.log4j</groupId>
     <artifactId>log4j-api</artifactId>
     <version>2.7</version>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
      <version>2.7</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.2</version>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>${project.basedir}/../sdk/</directory>
        <includes>
          <include>docs/license.html</include>
          <include>docs/acknowledgments.html</include>
        </includes>
      </resource>
      <resource>
        <directory>${project.basedir}/src/main/resources/</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.2</version>
        <!-- the following version puts classpath dir after generated path not before -->
        <!-- <version>3.0.2</version> -->
        <configuration>
          <!--
          <finalName>swirlds</finalName>
          <outputDirectory>${project.basedir}/../sdk/</outputDirectory>
          -->
          <archive>
            <manifest>
              <mainClass>com.swirlds.platform.Browser</mainClass>
              <addClasspath>true</addClasspath>
              <classpathPrefix>data/lib/</classpathPrefix>
              <useUniqueVersions>false</useUniqueVersions>
            </manifest>
            <manifestEntries>
              <Sealed>true</Sealed>
              <Built-By>Swirlds, Inc.</Built-By>
              <Class-Path>data/</Class-Path>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
